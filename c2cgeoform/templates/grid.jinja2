<div class="list-grid">

  <a class='btn btn-primary btn-new' href="{{request.route_url('c2cgeoform_action', action='edit', id='new')}}">{{_("New")}}</a>

  <table id="grid" data-toggle="bootgrid" class="table table-condensed table-hover table-striped">
    <thead>
      <tr>
        {% for field in list_fields %}
        <th data-column-id="{{field[0]}}">{{field[1]}}</th>
        {% endfor %}
        <th data-column-id="_id_" data-searchable="false" data-sortable="false"
            data-converter="commands">{{_('Commands')}}</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <script type="text/javascript">
  function confirmation(href) {
      if (window.confirm('{{_("Are your sure ?")}}')) {
          window.location.href = href;
      }
  }
  $('#grid').bootgrid({
      ajax: true,
      ajaxSettings: {
        method: "GET",
        cache: false
      },
      multiSort: true,
      url: "{{request.route_url('c2cgeoform_grid')}}",
      labels: {
          all: '{{_('All')}}',
          infos: '{{_('Showing ((ctx.start)) to ((ctx.end)) of ((ctx.total)) entries')}}'.replace(/\(\(/g, '{{ '{{' }}').replace(/\)\)/g, '{{ '}}' }}'),
          loading: '{{_('Loading...')}}',
          noResults: '{{_('No results found!')}}',
          refresh: '{{_('Refresh')}}',
          search: '{{_('Search')}}'
      },
      converters: {
          commands: {
              from: function(value) {
                  return '_id_';
              },
              to: function(value) {
                  var delete_url = "{{request.route_url('c2cgeoform_action', action='delete', id='_id_')}}".replace('_id_', value);             
                  return '' +
                      '<a href="{{request.route_url('c2cgeoform_action', action='edit', id='_id_')}}">{{_("Edit")}}</a>'.replace('_id_', value) +
                      '<a href="#delete" onclick=confirmation("'+delete_url+'");>{{_("Delete")}}</a>';
              },
          }
      }
  });
  </script>
</div>
