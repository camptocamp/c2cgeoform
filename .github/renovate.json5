{
  extends: [
    'github>camptocamp/gs-renovate-config-preset:base.json5#1.1.1',
    'github>camptocamp/gs-renovate-config-preset:group.json5#1.1.1',
    'github>camptocamp/gs-renovate-config-preset:stabilization-branches.json5#1.1.1',
    'github>camptocamp/gs-renovate-config-preset:ci.json5#1.1.1',
    ':dependencyDashboard',
    'github>camptocamp/gs-renovate-config-preset:preset.json5#1.1.1',
    'github>camptocamp/gs-renovate-config-preset:pre-commit.json5#1.1.1',
    'github>camptocamp/gs-renovate-config-preset:python.json5#1.1.1',
    'github>camptocamp/gs-renovate-config-preset:security.json5#1.1.1',
    'github>camptocamp/gs-renovate-config-preset:own.json5#1.1.1',
    'github>camptocamp/gs-renovate-config-preset:json-schema.json5#1.1.1',
    'github>camptocamp/gs-renovate-config-preset:shellcheck.json5#1.1.1',
  ],
  baseBranches: ['2.1', '2.4', 'master'],
  packageRules: [
    /** Group the Webpack dependencies */
    {
      matchUpdateTypes: ['major'],
      groupName: 'webpack',
      matchPackageNames: [
        '/^webpack$/',
        '/^html-webpack-plugin$/',
        '/^mini-css-extract-plugin$/',
        '/^sass$/',
        '/^webpack-.*/',
        '/.*-loader$/',
      ],
    },
    /** Don't upgrade Bootstrap major versions */
    {
      matchUpdateTypes: ['major'],
      enabled: false,
      matchPackageNames: ['/^bootstrap$/'],
    },
    /** Accept only the patch on stabilization branches */
    {
      matchBaseBranches: ['/^[0-9]+\\.[0-9]+$/'],
      matchUpdateTypes: ['major', 'minor', 'pin', 'digest', 'lockFileMaintenance', 'rollback', 'bump'],
      enabled: false,
    },
    /** Disable upgrading the supported Python version */
    {
      matchFileNames: ['pyproject.toml'],
      enabled: false,
      matchDepNames: ['python'],
    },
    /** Packages published very recently are not pushed to stabilization branches for security reasons */
    {
      matchBaseBranches: ['/^[0-9]+\\.[0-9]+$/'],
      minimumReleaseAge: '7 days',
    },
  ],
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
}
